<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Browse Available Pets</title>
</head>

<body>
    <header>
        Zach's Pet Adoption Agency
        <a href="/"><img src="/pictures/peticon.png" alt="pet_icon"></a>
        <a id="clock" style="position: fixed; right: 10px; font-size: 20px;"></a>
    </header>
    <nav>
        <a href="/">Home</a>
        <a href="/find">Find a dog/cat</a>
        <a href="/dog">Dog Care</a>
        <a href="/cat">Cat Care</a>
        <a href="/giveaway">Have a pet to give away</a>
        <a href="/contact">Contact Us</a>
        <a href="/register">Create Account</a>
        <% if (loggedIn) { %>
            <a href="/logout" id="logout" onclick="logoutMessage()">Logout</a>
            <% } %>
    </nav>
    <div class="content">
        <div class="topic">
            <h1>Available Pets</h1>
            <div class="browse-container">
                <% let displayLimit=4; let count=0; %>
                    <% pets.forEach(function(pet) { %>
                        <% if(count < displayLimit) { %>
                            <div class="pet">
                                <h2>
                                    <%= pet.pet_type %>
                                </h2>
                                <div>
                                    <p>Breed: <%= pet.breed %>
                                    </p>
                                    <p>Age: <%= pet.age %>
                                    </p>
                                    <p>Gender: <%= pet.gender %>
                                    </p>
                                    <button class="button" onclick="changeColor(this)">Interested</button>
                                </div>
                            </div>
                            <% count++; %>
                                <% } %>
                                    <% }) %>
            </div>
        </div>
    </div>
    <footer><a href="/privacy">Privacy/Disclaimer Statement</a></footer>
    <script src="/js/script.js"></script>
</body>

</html>